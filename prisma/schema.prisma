// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  username   String?  @unique
  password   String
  first_name String
  last_name  String
  reviews    Review[]
}

model Movie {
  id           Int      @id @default(autoincrement())
  name         String
  description  String
  release_date DateTime
  ticket_price Float
  genre        String
  photo_url    String
  country      String
  reviews      Review[]
}

model Review {
  id       Int    @id @default(autoincrement())
  rate     Int    @default(1)
  comment  String
  user_id  Int
  movie_id Int
  user     User   @relation(fields: [user_id], references: [id])
  movie    Movie  @relation(fields: [movie_id], references: [id])
}
